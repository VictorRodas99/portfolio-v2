---
import type { Experience } from '@/types/experience'
import ExperienceItem from './experience-item.astro'

interface Props {
  experiences: Experience[]
}

const { experiences } = Astro.props
---

<ol class="relative">
  {
    experiences.map((experience) => (
      <li>
        <ExperienceItem {...experience} />
      </li>
    ))
  }
</ol>
