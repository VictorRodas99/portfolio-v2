---
import type { Experience } from '@/lib/data/experience'
import ChevronRightIcon from './icons/chevron-right.astro'
import LinkInline from './link-inline.astro'

interface Props extends Experience {}

const { title, company, description, link, date } = Astro.props
---

<div
  class="relative mx-12 pb-12 grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-black/20 dark:before:border-white/15 before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4]"
>
  <div class="relative pb-12 md:col-span-2">
    <div class="sticky top-0">
      <span class="text-primary -left-[42px] absolute rounded-full text-5xl"
        >&bull;</span
      >

      <h3 class="text-xl font-bold text-primary">{title}</h3>
      <h4 class="font-semibold text-lg text-gray-600 dark:text-white">
        {company}
      </h4>
      <time class="p-0 m-0 text-sm text-gray-600/80 dark:text-white/80"
        >{date}</time
      >
    </div>
  </div>
  <div
    class="relative flex flex-col gap-2 pb-4 text-gray-600 dark:text-soft-white/70 md:col-span-3"
  >
    {description}
    {
      link && (
        <LinkInline href={link} class="flex gap-2">
          Saber m√°s
          <ChevronRightIcon />
        </LinkInline>
      )
    }
  </div>
</div>
