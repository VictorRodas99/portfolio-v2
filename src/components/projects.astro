---
import projects from '@/lib/data/projects'
import GithubIcon from '@/components/icons/github'
import LinkIcon from '@/components/icons/link'
---

{
  projects.map((project) => (
    <article class="flex gap-7">
      <div class="w-[45%] overflow-hidden rounded-lg grid place-items-center">
        <img
          src={project.image}
          alt={`${project.slug}-image`}
          class="object-cover w-full h-52 sm:h-full md:scale-110 px-5"
        />
      </div>

      <div class="flex flex-col gap-7 w-[55%]">
        <div class="flex flex-col gap-2">
          <h2 class="font-bold text-2xl">{project.name}</h2>
          <div class="flex gap-2 flex-wrap">
            {project.stack &&
              project.stack.map((technology) => (
                <span
                  class={`${technology.colorClass} rounded-full px-2 py-1 text-sm flex gap-1 items-center justify-center`}
                >
                  <technology.icon />
                  {technology.name}
                </span>
              ))}
          </div>
        </div>

        <div class="flex flex-col gap-5">
          <p class="text-soft-white/70 text-pretty">{project.description}</p>
          <div class="flex gap-5">
            {project.github && (
              <a
                href={project.github}
                class="flex gap-2 bg-accent/60 border-2 border-accent rounded-xl px-3 py-2 items-center hover:bg-primary transition-colors"
              >
                <GithubIcon className="size-4" />
                Code
              </a>
            )}
            {project.demo && (
              <a
                href={project.demo}
                class="flex gap-2 bg-accent/60 border-2 border-accent rounded-xl px-3 py-2 items-center hover:bg-primary transition-colors"
              >
                <LinkIcon className="size-4" />
                Preview
              </a>
            )}
          </div>
        </div>
      </div>
    </article>
  ))
}
